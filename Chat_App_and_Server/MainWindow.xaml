<Window x:Class="Chat_App_and_Server.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chat_App_and_Server"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="470"
        Width="800">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="VisibilityConverter" />
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>

            <Grid Margin="5"
                  Visibility="{Binding IsChecked, ElementName=ServerRadioButton, Converter={StaticResource VisibilityConverter}}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Label Name="ServerPort"
                       Content="Port:"
                       Margin="5" />

                <TextBox x:Name="SPort"
                         Grid.Column="1"
                         TextWrapping="Wrap"
                         Margin="5" />

                <Label Name="MaxClient"
                       Grid.Column="2"
                       Content="Max Client:"
                       Margin="5" />

                <TextBox x:Name="MaxC"
                         Grid.Column="3"
                         TextWrapping="Wrap"
                         Margin="5" />

                <Button Content="Start"
                        Grid.Column="4"
                        Name="ServerB"
                        Click="ServerB_Click"
                        Margin="5" />
            </Grid>

            <Grid Grid.ColumnSpan="1"
                  Visibility="{Binding IsChecked, ElementName=ClientRadioButton, Converter={StaticResource VisibilityConverter}}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Label Content="Port:"
                       Name="Port"
                       Margin="5" />

                <TextBox x:Name="PortT"
                         Grid.Column="1"
                         TextWrapping="Wrap"
                         Margin="5" />

                <Label Name="Nickname"
                       Grid.Column="2"
                       Content="Nickname:"
                       Margin="5" />

                <TextBox x:Name="NicknameT"
                         Grid.Column="3"
                         TextWrapping="Wrap"
                         Margin="5" />

                <Button Name="Button1"
                        Content="Connect"
                        Grid.Column="4"
                        Click="ConnectButton_Click"
                        Margin="5" />
            </Grid>

            <StackPanel Grid.Column="5"
                        Orientation="Vertical"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center">
                <RadioButton x:Name="ServerRadioButton"
                             Content="Server"
                             Grid.Column="5"
                             IsChecked="True"
                             Margin="2" />
                <RadioButton x:Name="ClientRadioButton"
                             Content="Client"
                             Grid.Column="5"
                             Margin="2" />
            </StackPanel>

        </Grid>

        <TextBox x:Name="IncomingMessage"
                 Grid.Row="1"
                 Margin="5"
                 TextWrapping="Wrap" />

        <Grid Grid.Row="3"
              Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition />
                <ColumnDefinition Width="0.2*" />
            </Grid.ColumnDefinitions>

            <Label Content="Message:"
                   Name="Message"
                   Margin="5" />

            <TextBox Name="MessageT"
                     Grid.Column="1"
                     TextWrapping="Wrap"
                     Margin="5" />

            <Button Name="Button"
                    Content="Send"
                    Grid.Column="2"
                    Margin="5"
                    Click="SendMessage_Click" />
        </Grid>

        <Grid Grid.Column="2"
              Grid.RowSpan="3"
              Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            <TextBlock Text="Bağlı Kullanıcılar"
                       FontSize="14"
                       FontWeight="SemiBold"
                       HorizontalAlignment="Center" />

            <ListView x:Name="ConnectedUserList"
                      Grid.Row="1"
                      Margin="0 5">

                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel />
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
                <ListView.ItemTemplate>
                    <DataTemplate DataType="{x:Type local:ConnectionModel}">
                        <Border BorderBrush="Black"
                                BorderThickness="1"
                                CornerRadius="5"
                                Background="Transparent">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto" />
                                    <RowDefinition Height="auto" />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="auto" />
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="{Binding Name}"
                                           FontSize="14"
                                           FontWeight="SemiBold"
                                           Margin="3 2"
                                           HorizontalAlignment="Center" />

                                <TextBlock Text="{Binding Status}"
                                           Grid.Column="1"
                                           Margin="0 2"
                                           HorizontalAlignment="Center" />

                                <TextBlock Text="{Binding RemoteIpPoint}"
                                           Grid.Row="1"
                                           FontSize="10"
                                           Foreground="Gray"
                                           Margin="3 0 3 0" />

                                <TextBlock Text="{Binding Timestampt}"
                                           Grid.Row="1"
                                           Grid.Column="1"
                                           FontSize="10"
                                           Foreground="Gray"
                                           Margin="3 0 3 0" />

                                <TextBlock Text="{Binding Id}"
                                           Grid.Row="2"
                                           Grid.ColumnSpan="2"
                                           HorizontalAlignment="Center"
                                           FontSize="9"
                                           Foreground="Gray"
                                           Margin="2" />
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <StackPanel Orientation="Horizontal"
                        Grid.Row="2"
                        Margin="5">
                <TextBlock Text="Total Connection: " />
                <TextBlock x:Name="TotatlConnectionCount"
                           Text="0"
                           Margin="5 0" />
            </StackPanel>
        </Grid>
    </Grid>
</Window>
